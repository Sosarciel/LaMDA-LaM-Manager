{
    "compilerOptions": {
        "allowJs": true,
        "strict": true,
		"experimentalDecorators": true,
        "target": "ES2022",
        "module": "node16",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "Constant"                : ["./src/Constant"],
            "ResponseFormat"          : ["./src/ResponseFormat"],
            "RequestFormat"           : ["./src/RequestFormat"],
            "TextCompletion"          : ["./src/TextCompletion"],
            "Requester"               : ["./src/Interactor"],
            "ChatTask"                : ["./src/ChatTask"],
            "Tokensizer"              : ["./src/Tokensizer"],
            "LaMService"              : ["./src/LaMService"],
			"Interactor"              : ["./src/Interactor"],
			"ModelDrive"              : ["./src/ModelDrive"],
			"CredService"             : ["./src/CredService"],
			"@/src/*"                 : ["./src/*"],
			"@/*"                     : ["./*"],
			"@"                       : ["./src/index"]
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.js", "./jest/**/*.ts"],
    "exclude": ["./node_modules/**/*"]
}
