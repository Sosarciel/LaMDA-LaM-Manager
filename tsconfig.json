{
    "compilerOptions": {
        "allowJs": true,
        "strict": true,
		"experimentalDecorators": true,
        "target": "ES2022",
        "module": "node16",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "Constant"                : ["./src/Constant"],
            "APITool"                 : ["./src/APITool"],
            "TextCompletion"          : ["./src/TextCompletion"],
            "@/RequestFormatAdapter/*": ["./src/RequestFormatAdapter/*"],
            "@/TextCompletion/*"      : ["./src/TextCompletion/*"],
			"@/src/*"                 : ["./src/*"],
			"@/*"                     : ["./*"],
			"@"                       : ["./src/index"]
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.js", "./jest/**/*.ts"],
    "exclude": ["./node_modules/**/*"]
}
